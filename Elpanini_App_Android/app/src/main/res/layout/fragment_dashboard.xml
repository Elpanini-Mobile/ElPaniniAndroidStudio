<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dashboard.DashboardFragment">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b8860b"
    android:orientation="vertical"
    android:gravity="bottom"
    >
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="-100dp"
        android:elevation="20dp"
        >
        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            app:cardElevation="20dp"
            app:srcCompat="@drawable/tonijn"
            android:elevation="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:cardElevation="8dp"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="550dp"
            android:background="@color/black"
            app:cardCornerRadius="50dp"
            android:layout_marginBottom="-30dp"
            app:cardElevation="8dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="60dp"
                    android:gravity="left"
                    android:text="@+id/tit"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:gravity="left"
                    android:text="6,00â‚¬"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="50dp"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:layout_marginTop="20dp"
                    android:gravity="left"
                    android:text="Description"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:layout_marginLeft="50dp"
                    android:textStyle="bold" />
                <TextView
                    android:layout_width="320dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/opensans"
                    android:gravity="left"
                    android:text="Het waren de Japanners die witte visfilet in handige staafjes zijn beginnen persen. Op onze beurt draaien we deze surimi-uitvinding dan weer in onze salade, samen met een sappige dosis krabvlees. Zo smeren we het beste van de zee tussen je broodje."
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_marginLeft="50dp"
                    />
                <Button
                    android:id="@+id/buttonLogin"
                    android:layout_width="342dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#B8860B"
                    android:fontFamily="@font/opensans"
                    android:text="add sandwich to cart"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="18sp" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </RelativeLayout>


</LinearLayout>
</layout>